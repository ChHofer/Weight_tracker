<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.natasa.progressviews.CircleProgressBar
                    android:id="@+id/circle_progress"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:bar_width="15dp"
                    app:bar_color="#b5b6b9"
                    app:progress="55"
                    app:progress_color="#d3f115"
                    app:progress_width="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="#E1F5FE"
                        android:layout_margin="0.5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:textColor="#616161"
                            android:text="@string/tv_start_weight"/>
                        <TextView
                            android:id="@+id/summary_tv_start_weight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="30sp"
                            android:textColor="#616161"
                            android:text="200.0"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:text=" lbs"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E1F5FE"
                        android:layout_margin="0.5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:textColor="#616161"
                            android:text="@string/tv_current_weight"/>
                        <TextView
                            android:id="@+id/summary_tv_current_weight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="30sp"
                            android:textColor="@android:color/holo_red_light"
                            android:text="170.0"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:text=" lbs"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E1F5FE"
                        android:layout_margin="0.5dp"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:textColor="#616161"
                            android:text="@string/tv_goal_weight"/>
                        <TextView
                            android:id="@+id/summary_tv_goal_weight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="30sp"
                            android:textColor="@android:color/holo_green_light"
                            android:text="160.0"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:text=" lbs"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:text="@string/tv_bmi_label"
                    android:textColor="@android:color/holo_blue_light"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_info_details"/>
            </LinearLayout>
            <com.natasa.progressviews.ArcProgressBar
                android:layout_gravity="center"
                android:id="@+id/arc_progressbar"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignEnd="@+id/line_progressbar"
                android:layout_alignRight="@+id/line_progressbar"
                android:layout_alignTop="@+id/line_progressbar1"
                android:visibility="visible"
                app:bar_color="#00B0FF"
                app:bar_width="25dp"
                app:progress_color="#03A9F4"
                app:progress_width="25dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/img_bmi"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ok"/>
                <TextView
                    android:id="@+id/summary_tv_bmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#2196F3"
                    android:textSize="50sp"
                    android:text="21.8"/>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_bmi_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#2196F3"
                android:textSize="25sp"
                android:text="21.8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/desc_bmi"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_summary_weight_loss_to_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="#FFB74D"
                android:textSize="20sp"
                android:layout_margin="0.5dp"
                android:textColor="@android:color/white"
                android:text="@string/label_weight_loss_to_date"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_info_details"/>
            <TextView
                android:id="@+id/tv_summary_weekly_weekly_loss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:text="&quot;Body Mass Index (BMI) is a person's weight in kilograms divided by the square of height in meters. A high BMI can be an indicator of high body fatness.BMI can be used to screen for weight categories that may lead to health problems but it is not diagnostic of the body fatness or health of an individual&quot;(CDC,2015).\nCenters for Disease Control and Prevention. (2015, May 15). Body Mass Index (BMI). Retrieved May 31, 2016, from https://www.cdc.gov/healthyweight/assessing/bmi/
"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>